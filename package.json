{
  "name": "cdk",
  "version": "0.1.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build-banner": "cd ./banner && npm run build --mode=production",
    "cdk": "cd ./cdk && cdk --profile=cookieconfirm",
    "update-repo": "git submodule update --remote",
    "deploy-scanner": "cd ./cdk && cdk deploy CookieScannerStack",
    "deploy-banner": "npm run build-banner && npm run cdk deploy -- --all",
    "code:format": "npx @biomejs/biome format --write",

    "____ CDK ______________________________________________": "",
    "cdk:deploy:banner": "cdk deploy --app 'tsx cdk/bin/consent-banner.ts' --all --require-approval never",
    "cdk:deploy:platform": "cdk deploy --app 'tsx cdk/bin/platform.ts' --all --require-approval never",
    "cdk:deploy:php": "cdk deploy --app 'tsx cdk/bin/php-image.ts' --all --require-approval never"
  },
  "workspaces": [
    "banner/*",
    "cdk",
    "packages/*"
  ]
}
